<div class="item">
  <div>Email</div>
  <div class="input">
    <input 
      type="email"
      name="email"
      value="{{user.email}}"
      placeholder="Digite o seu email"
      onblur="Validate.apply(this, 'isEmail')"
    >
  </div>
</div>

<div class="item">
  <div>Nova senha</div>
  <div class="input">
    <input 
      type="password"
      name="password"
      placeholder="Digite uma nova senha"
    >
  </div>
</div>

<div class="item">
  <div>Repetir senha</div>
  <div class="input">
    <input 
      type="password"
      name="passwordRepeat"
      placeholder="Repita a nova senha"
    >
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">