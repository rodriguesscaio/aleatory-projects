{% extends 'layout.njk' %}

{% block content %}

<div class="card">

  <section class="image" style="background: url(https://source.unsplash.com/collection/8359212/500x500) no-repeat center center / cover">

  </section>

  <section class="details">
    <form action="/teachers?_method=PUT" method="POST">

      <h3>Editar</h3>

      
      {% include 'teachers/fields.njk' %}
      <input type="hidden" name="id" value="{{ teacher.id }}">
      
    </form>

    <form action="/teachers?_method=DELETE" method="post" id="form-delete">
      <input type="hidden" name="id" value="{{ teacher.id }}">
      <button type="submit">Deletar</button>
    </form>

  </section>
</div>

{% endblock %}