<div class="item">
      <div>Avatar URL</div>
      <div>
        <input 
          type="url" 
          name="avatar_url"
          placeholder="http://"
          value="{{ teacher.avatar_url }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Nome completo</div>
      <div>
        <input type="text" name="name" value="{{ teacher.name }}" >
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input 
          type="date" 
          name="birth"
          value="{{ teacher.birth }}"
        >
      </div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="degreeSchool">
            {% if teacher.degreeSchool %}
              {{ teacher.degreeSchool }}
            {% else %}
              Selecione aqui
            {% endif %}
          </option>
          <option value="medio">Ensino Médio Completo</option>
          <option value="superior">Ensino Superior Completo</option>
          <option value="M">Mestrado</option>
          <option value="D">Doutorado</option>
        </select>
      </div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span>
          <input 
            type="radio" 
            name="typeClass" 
            value="presencial"
            {% if teacher.typeClass == 'presencial' %}
              checked
              {% else %}
              checked
            {% endif %} 
          >Presencial
        </span>
        <span>
          <input 
            type="radio" 
            name="typeClass" 
            value="distancia"
            {% if teacher.typeClass == 'distancia' %}
              checked
            {% endif %}
          >À distância
        </span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input 
          type="text" 
          name="area"
          placeholder="Informe as matérias separadas por vírgula"
          value="{{ teacher.area }}"
        >
      </div>
    </div>

    <button class="buttonForm" type="submit">Registrar</button>
