<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url" 
      name="avatar_url"
      placeholder="https//:"
      value="{{ student.avatar_url }}"
    >
  </div>
</div>

<div class="item">
  <div>Nome completo</div>
  <div>
    <input 
      type="text" 
      name="name"
      value="{{ student.name }}"
    >
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div>
    <input 
      type="email" 
      name="email"
      value="{{ student.email }}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
    type="date" 
    name="birth"
    value="{{ student.birth }}"
  >
  </div>
</div>

<div class="item">
  <div>Ano escolar</div>
  <div>
    <select name="school_year">
      <option value="5EF"
      {% if student.school_year == '5EF' %}selected{% endif %}
      >5º ano do Ensino Fundamental</option>
      <option value="6EF"
      {% if student.school_year == '6EF' %}selected{% endif %}
      >6º ano do Ensino Fundamental</option>
      <option value="7EF"
      {% if student.school_year == '7EF' %}selected{% endif %}
      >7º ano do Ensino Fundamental</option>
      <option value="8EF"
      {% if student.school_year == '8EF' %}selected{% endif %}
      >8º ano do Ensino Fundamental</option>
      <option value="9EF"
      {% if student.school_year == '9EF' %}selected{% endif %}
      >9º ano do Ensino Fundamental</option>
      <option value="1EM"
      {% if student.school_year == '1EM' %}selected{% endif %}
      >1º ano do Ensino Médio</option>
      <option value="2EM"
      {% if student.school_year == '2EM' %}selected{% endif %}
      >2º ano do Ensino Médio</option>
      <option value="3EM"
      {% if student.school_year == '3EM' %}selected{% endif %}
      >3º ano do Ensino Médio</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária semanal (h)</div>
  <div>
    <input 
      type="number" 
      name="charge_hour"
      value="{{ student.charge_hour }}"
    >
  </div>
</div>

<div class="item">
  <div>Aluno de</div>
  <div>
    <select name="teacher">
      {% for teacher in teachersOptions %}
        <option 
          value="{{ teacher.id }}"
          {% if student.teacher_id == teacher.id %}
            selected
          {% endif %}
        >
          {{ teacher.name }}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<button type="submit" class="buttonForm">Cadastrar</button>