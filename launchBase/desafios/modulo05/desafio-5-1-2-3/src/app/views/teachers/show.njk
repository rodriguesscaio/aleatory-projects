{% extends 'layout.njk' %}

{% block content %}

<div class="card">
  <section class="image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover ">

  </section>

  <section class="details">

    <h3>Professor</h3>

    <div class="item">
      <div>Nome completo</div>
      <div>{{ teacher.name }}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{ teacher.birth_date }}</div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>{{ teacher.education_level }}</div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>{{ teacher.class_type }}</div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      <div>
        {% for area in teacher.subjects_taught %}
          <span>{{ area }}</span>
        {% endfor %}
      </div>
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{ teacher.create_at }}</div>
    </div>

    <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

  </section>
</div>

{% endblock %}