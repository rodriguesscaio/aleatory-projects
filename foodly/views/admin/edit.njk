{% extends 'admin/layout.njk' %}

{% block content %}
<form class="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
      <input type="hidden" name="id" value="{{ recipe.id }}">
      <button type="submit" class="button-delete" >Deletar</button>
</form>

<form class="form-recipe" action="/admin/recipes?_method=PUT" method="POST">

  <div class="title-link">
    <h1>Editando Receita</h1>
    <input type="hidden" name="id" value="{{ recipe.id }}">
    <button type="submit" class="button-form">Salvar receita</button>
  </div>

  {% include 'admin/fields.njk' %}

</form>

{% endblock %}